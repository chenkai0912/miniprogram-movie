/* miniprogram/pages/movie/movie.wxss */
/* 每一个movie盒子的样式 */
.movie {
  height: 300rpx;
  display: flex;
  padding: 10px;
  border-bottom: 1px solid #ccc;
}
.movie-img {
  width: 200rpx;
  height: 100%;
  margin-right: 20rpx;
  border-radius: 2px;
}

.movie-info {
  flex: 1;
  color: #bdc3c7;
}

.movie-title {
  color: #10ac84;
  font-size: 40rpx;
  font-weight: bolder;
}

.movie-rating {
  color: #faaf00;
}